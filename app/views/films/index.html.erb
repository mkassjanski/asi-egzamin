<h1 class="text-center none-margin-top-bottom">Films</h1>

<div class="container">
  <div class="row">

  <% @films.each do |f| %>
  <div class="col-sm-6 col-md-4">
    <div class="thumbnail">
      <%= image_tag f.poster.url, class: "poster256" %>
      <div class="caption">
        <h3 class="text-center"><%= f.title %></h3>
        <p class="text-center"><%= f.director %> <%= f.year %></p>
          <p class="text-center">
            <%= link_to "", f, class: "btn btn-xs btn-info btn-circle btn-outline glyphicon glyphicon-eye-open" %>
              <%= link_to "", edit_film_path(f), class: "btn btn-xs btn-primary btn-circle btn-outline glyphicon glyphicon-pencil" %>
              <%= link_to '', film_path(f),
              method: :delete,
              data: { confirm: 'Are you sure?' },
              class: "btn btn-xs btn-danger btn-circle btn-outline glyphicon glyphicon-remove" %>
            </p>
            </div>
    </div>
  </div>
<% end %>
</div>
<%= will_paginate @films, renderer: BootstrapPagination::Rails %>
</br>
<%= link_to "Add new film", new_film_url ,class: "glyphicon glyphicon-plus" %>

</div>
