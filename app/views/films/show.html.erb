
<div class="container">
  <div class="panel panel-default">
  <div class="panel-body">
    <div class="row">
      <div class="col-md-4">
        <%= image_tag @film.poster.url, class: "poster256" %>
        <div class="table-responsive">
          <table class="table">
            <tbody>
              <tr>
                <td><strong>Title:</strong></td>
                <td><%= @film.title %></td>
              </tr>
              <tr>
                <td><strong>Director:</strong></td>
                <td><%= @film.director %></td>
              </tr>
              <tr>
                <td><strong>Movie year:</strong></td>
                <td><%= @film.year %></td>
              </tr>
            </tbody>
          </table>
          <%= link_to "Write a Review", new_film_comment_path(@film) %>
        </div>
      </div>
      <div class="col-md-7 col-md-offset-1">
        <h1 class="review_title"><%= @film.title %></h1>
        <p><%= @film.director %></p>

        <% if @comments.blank? %>
          <h3>No reviews just yet, would you like to add the first!</h3>
        <% end %>
        <h2>Comments</h2>
    <% @film.comments.each do |comment| %>
      <p>
        <strong>Commenter:</strong>
        <%= comment.commenter %>
      </p>

      <p>
        <strong>Comment:</strong>
        <%= comment.body %>
      </p>
    <% end %>

    <h2>Add a comment:</h2>
    <%= form_for([@film, @film.comments.build]) do |f| %>
      <p>
        <%= f.label :commenter %><br>
        <%= f.text_field :commenter %>
      </p>
      <p>
        <%= f.label :body %><br>
        <%= f.text_area :body %>
      </p>
      <p>
        <%= f.submit %>
      </p>
    <% end %>
      </div>
    </div>
  </div>
</div>

<%= link_to 'Edit', edit_film_path(@film) %> |
<%= link_to 'Back', films_path %>
</div>
