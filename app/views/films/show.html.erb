<div class="panel panel-default">
  <div class="panel-body">
    <div class="row">
      <div class="col-md-4">
        <%= image_tag @film.poster.url %>
        <div class="table-responsive">
          <table class="table">
            <tbody>
              <tr>
                <td><strong>Title:</strong></td>
                <td><%= @film.title %></td>
              </tr>
              <tr>
                <td><strong>Director:</strong></td>
                <td><%= @film.director %></td>
              </tr>
              <tr>
                <td><strong>Movie year:</strong></td>
                <td><%= @film.year %></td>
              </tr>>
            </tbody>
          </table>
          <%= link_to "Write a Review", new_film_comment_path(@film) %>
        </div>
      </div>
      <div class="col-md-7 col-md-offset-1">
        <h1 class="review_title"><%= @film.title %></h1>
        <p><%= @film.director %></p>

        <% if @comments.blank? %>
          <h3>No reviews just yet, would you like to add the first!</h3>
          <%= link_to "Write Review", new_film_comment_path(@film), class: "btn btn-danger" %>
        <% else %>
          <% @comments.each do |comment| %>
            <div class="reviews">
              <p><%= comment.body %></p>
            </div>
          <% end %>
        <% end %>

        <%= form_for([@film, @film.comments.build]) do |f| %>
          <p>
            <%= f.label :body %><br>
            <%= f.text_area( :body, class: "form-control",  ) %>
          </p>
          <p>

            <%= f.submit :class => "btn btn-default" %>
          </p>
        <% end %>

      </div>
    </div>
  </div>
</div>

<%= link_to 'Edit', edit_film_path(@film) %> |
<%= link_to 'Back', films_path %>
