<div class="container">
  <%= image_tag @film.poster.url %>
  </br></br></br>
  <table class="table table-bordered table-striped">
     <tr>
       <td>
         <small>Title</small>
       </td>
     </tr>
     <tr>
       <td>
         <%= @film.title %>
       </td>
     </tr>

     <tr>
       <td>
         <small>Director</small>
       </td>
     </tr>
     <tr>
       <td>
         <%= @film.director %>
       </td>
     </tr>
     <td>
       <small>Year</small>
     </td>
   </tr>
   <tr>
     <td>
       <%= @film.year %>
     </td>
   </tr>
   </table>
   <h2>Comments</h2>
<% @film.comments.each do |comment| %>
  <p>
    <strong>Commenter:</strong>
    <%= comment.commenter %>
  </p>

  <p>
    <strong>Comment:</strong>
    <%= comment.body %>
  </p>
  <p>
  <%= link_to 'Destroy Comment', [comment.film, comment],
               method: :delete %>
</p>
<% end %>
   <h2>Add a comment:</h2>
<%= form_for([@film, @film.comments.build]) do |f| %>
  <p>
    <%= f.label :commenter %><br>
    <%= f.text_field :commenter %>
  </p>
  <p>
    <%= f.label :body %><br>
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>
   <div class="form-group">
       <%= link_to "", films_path, class: "btn btn-default btn-circle btn-outline glyphicon glyphicon-arrow-left" %>
   </div>
</div>
</div>
