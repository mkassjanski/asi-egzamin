<div class="container">
<div class="panel panel-default">
  <div class="panel-body">
    <div class="row">
      <div class="col-md-4">
        <%= image_tag @film.poster.url  %>
        <div class="table-responsive">
          <table class="table">
            <tbody>
              <tr>
                <td><strong>Title:</strong></td>
                <td><%= @film.title %></td>
              </tr>
              <tr>
                <td><strong>Director:</strong></td>
                <td><%= @film.director %></td>
              </tr>
              <tr>
                <td><strong>Movie year:</strong></td>
                <td><%= @film.year %></td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
      <div class="col-md-7 col-md-offset-1">
        <h1 class="review_title"><%= @film.title %></h1>
        <% @film.comments.each do |comment| %>
         <div class="star-rating" data-score= <%= comment.rating %> ></div>
    <p><%= comment.user.email %> says: <%= comment.body %>   <%= link_to 'Delete', [comment.film, comment],
               method: :delete %></p>
  <% end %>

        <%= form_for([@film, @film.comments.build]) do |f| %>
        <div class="field">
          <div id="star-rating2"></div>
      </div>
          <p>
            <%= f.label :body %><br>
            <%= f.text_area( :body, class: "form-control",  ) %>
          </p>
          <p>

            <%= f.submit :class => "btn btn-default" %>
          </p>
        <% end %>

      </div>
    </div>
  </div>
</div>

<%= link_to 'Edit', edit_film_path(@film) %> |
<%= link_to 'Back', films_path %>
</div>
<script>
    $('.star-rating').raty({
      path: '/assets/',
      readOnly: true,
      score: function() {
            return $(this).attr('data-score');
    }
  });
  $('#star-rating2').raty({
    path: '/assets/',
    scoreName: 'comment[rating]'
  });
</script>
